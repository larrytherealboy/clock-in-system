<a href="/todos/new" class="btn btn-primary mb-3">Create</a>
<ul class="list-group">
  {{#each records}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto me-auto">
        <h4 class="d-inline ms-2 align-middle">
          {{ this.clockin }}
        </h4>
        <h4 class="d-inline ms-2 align-middle">
          {{ this.clockout }}
        </h4>
      </div>
    </div>
  </li>
  {{/each}}
</ul>
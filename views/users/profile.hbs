<div class="row mb-5">
  <div class="col-md-4">
    <img class="img-responsive center-block mb-5" src="{{user.image}}"
      style="width: 250px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
  <div class="col-md-8">
    <div class="well">
      <ul class="list-unstyled">
        <li><strong>Name: {{user.name}}</strong></li>
        <li><strong>Account: {{user.account}}</strong></li>
        {{#if user.isAdmin}}
        <li><strong>Permission: Admin</strong></li>
        {{else}}
        <li><strong>Permission: User</strong></li>
        {{/if}}
      </ul>
    </div>
    <a class="btn btn-primary" href="/users/{{user.id}}/edit" role="button">Edit Password</a>
  </div>
  <hr>
</div>